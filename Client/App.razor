<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @* redirect to login *@
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <p>Sorry, there's nothing at this address.</p>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Inject] Client.Services.AuthService AuthService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await AuthService.InitializeAsync(); // silent login using refresh cookie (if available)
    }
}